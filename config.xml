<?xml version='1.0' encoding='utf-8'?>
<widget id="com.infinityfree.civictrack" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>CivicTrack</name>
    <description>Mobile App for Reporting and Tracking Local Issues</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        CivicTrack Dev Team
    </author>

    <content src="index.html" />

    <!-- Allow all network requests -->
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Explicitly allow your InfinityFree backend -->
    <allow-navigation href="civictrack.infinityfreeapp.com/www/pages/login.html/*" />
    <access origin="civictrack.infinityfreeapp.com/www/pages/login.html" />
</widget>
